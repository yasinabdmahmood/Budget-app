<h1>Transaction#new</h1>
<p>Find me in app/views/transaction/new.html.erb</p>
<%= form_with model: @new_record, url: transaction_create_path, method: :post, local: true, scope: :new_record do |f| %>
    <div>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
    </div>

    <div>
    <%= f.label :Amount %><br>
    <%= f.number_field  :amount %>
    </div>
    <div class="form-group">
        <%= f.select :catagory, @catagories %>
    </div>

    <%= f.submit "Save" %>
<% end %>
